<%= simple_form_for(@customer) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :reponsible %>
    <%= f.association :city %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>

